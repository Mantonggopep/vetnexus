{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": [
    "*.ts",
    "*.tsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules", "backend"]
}
